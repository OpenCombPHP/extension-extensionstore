<?xml version="1.0" encoding="utf-8"?>
<Extension>
	<name>extensionstore</name>
	<version>0.1</version>
	<title>扩展商店</title>
	
	<class>org.opencomb.extensionstore.ExtensionStore</class>
	<package folder="/class" namespace="org.opencomb.extensionstore" />
	
	<publicFolder folder="/public" />
	
	<template folder="/template" />
	<template folder="/template_coresystem"  for ='coresystem'/>
	
	<beanFolder folder="/bean" />
	
		<!-- 依赖脚本语言-->
	<require type="language" item="php">
	<![CDATA[
		>=5.3,<6.0
	]]>
	</require>
	
	<!-- 依赖脚本语言模块-->
	<require type="language_module" item="dd"><![CDATA[ >=5.3,<5.8 ]]></require>
	<require type="language_module" item="dds"><![CDATA[ >=0.1 ]]></require>
	<!-- 依赖蜂巢系统-->
	<require type="platform"><![CDATA[ >=0.1 ]]></require>
	
	<!-- 依赖其他扩展-->
	<require type="extension" item="oauth/0.1"><![CDATA[ >=0.1 ]]></require>
	<require type="extension" item="doccenter/0.1"><![CDATA[ >=0.1 ]]></require>
	
</Extension>
